@model IEnumerable<ShoppingCart_.DAL.Models.Order>

@{
    ViewData["Title"] = "CustomerOrders";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<table class="table">
    <thead>
        <tr>
          
            <th>
              Order Total Price
            </th>
            <th>
                Order Date
            </th>
           
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.OrderTotlPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>

                    <td>
              
                        <a class="btn btn-primary text-white" href="@Url.Action("CustomerOrderDetails", "Home", new { id = item.Id })">
                            <i class="fa fa-pencil-square-o"></i>&nbsp;Details
                        </a>

                    </td>
                </tr>
            }

        }
    </tbody>
</table>
